<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring/spring-*.xml
		</param-value>
	</context-param>




	<!-- 配置spring监听器 ,监听spring IOC容器的创建工作 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>

	</listener>

	<!-- Springmvc的核心控制器 -->
	<servlet>
		<servlet-name>dispatchServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring/springmvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- <servlet>
	<servlet-name>addPic</servlet-name>
	    <servlet-class>/WEB-INF/pages/enterpriseManage/addPic.jsp</servlet-class>
	</servlet> -->
	<servlet-mapping>
		<servlet-name>dispatchServlet</servlet-name>
		<url-pattern>*.shtml</url-pattern>
	</servlet-mapping>
   
   
      <filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!--Kaptcha验证码-->
    <servlet>
        <servlet-name>Kaptcha</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>

        <!--是否显示画布边框-->
        <init-param>
            <param-name>kaptcha.border</param-name>
            <param-value>no</param-value>
        </init-param>

        <!--字体颜色-->
        <init-param>
            <param-name>kaptcha.textproducer.font.color</param-name>
            <param-value>19,98,141</param-value>
        </init-param>

        <!--字符间的间距-->
        <init-param>
            <param-name>kaptcha.textproducer.char.space</param-name>
            <param-value>1</param-value>
        </init-param>

        <!--字体-->
        <init-param>
            <param-name>kaptcha.textproducer.font.names</param-name>
            <param-value>Courier,Arial</param-value>
        </init-param>

        <!--画布宽度-->
        <init-param>
            <param-name>kaptcha.image.width</param-name>
            <param-value>70</param-value>
        </init-param>

        <!--画布高度-->
        <init-param>
            <param-name>kaptcha.image.height</param-name>
            <param-value>30</param-value>
        </init-param>

        <!-- <init-param>
             <description>Thickness of the border around kaptcha. Legal values are > 0. </description>
             <param-name>kaptcha.border.thickness</param-name>
             <param-value>0</param-value>
         </init-param>-->

        <init-param>
            <param-name>kaptcha.obscurificator.impl</param-name>
            <param-value>com.xiupeilian.car.util.NoRipple</param-value>
        </init-param>

        <!--字符个数-->
        <init-param>
            <param-name>kaptcha.textproducer.char.length</param-name>
            <param-value>4</param-value>
        </init-param>

        <!--字体大小-->
        <init-param>
            <param-name>kaptcha.textproducer.font.size</param-name>
            <param-value>24</param-value>
        </init-param>

        <!--文本字符内容范围-->
        <init-param>
            <param-name>kaptcha.textproducer.char.string</param-name>
            <param-value>abcde2345678gfynmnpwxABCDEGFYNMNPWX</param-value>
        </init-param>

        <!--不产生干扰线-->
        <init-param>
            <param-name>kaptcha.noise.impl</param-name>
            <param-value>com.google.code.kaptcha.impl.NoNoise</param-value>
        </init-param>

        <!--背景-->
        <init-param>
            <param-name>kaptcha.background.clear.from</param-name>
            <param-value>white</param-value>
        </init-param>

        <!--字体生成器-->
        <!--<init-param>
            <param-name>kaptcha.word.impl</param-name>
            <param-value>cn.street.bss.sys.security.ZHWordRenderer</param-value>
        </init-param>-->

    </servlet>
    <servlet-mapping>
        <servlet-name>Kaptcha</servlet-name>
        <url-pattern>/login/Kaptcha.jpg</url-pattern>
    </servlet-mapping>
	
</web-app>